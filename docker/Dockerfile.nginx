# Build Stage
FROM docker.m.daocloud.io/node:20-alpine AS build-stage
WORKDIR /app
COPY frontend/package*.json ./
RUN npm install
COPY frontend/ .
# Clean TypeScript build info and rebuild
RUN rm -rf node_modules/.tmp && npx tsc -b --force && npm run build

# Production Stage
FROM docker.m.daocloud.io/nginx:alpine AS production-stage
COPY --from=build-stage /app/dist /usr/share/nginx/html
COPY docker/nginx.conf /etc/nginx/nginx.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
