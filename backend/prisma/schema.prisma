generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model DeviceModel {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  isEnabled Boolean  @default(true)
  issues    Issue[]
}

model User {
  id            Int         @id @default(autoincrement())
  username      String      @unique
  password      String
  name          String?
  role          String      @default("ADMIN")
  isBuiltin     Boolean     @default(false)
  issues        Issue[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  assignedTasks IssueTask[] @relation("TaskAssignee")
  createdTasks  IssueTask[] @relation("TaskCreator")
}

model Issue {
  id              Int          @id @default(autoincrement())
  nanoId          String       @unique @default("")
  submitDate      DateTime     @default(now())
  reporterName    String
  contact         String?
  modelId         Int
  model           DeviceModel  @relation(fields: [modelId], references: [id])
  serialNumber    String?
  purchaseDate    DateTime?
  customerName    String?
  firmware        String?
  softwareVer     String?
  title           String
  occurredAt      DateTime?
  frequency       String?
  phenomenon      String?
  errorCode       String?
  description     String
  severity        Int          @default(2)
  priority        String?      @default("P2")
  categoryId      Int?
  category        Category?    @relation(fields: [categoryId], references: [id])
  environment     String?
  location        String?
  waterType       String?
  voltage         String?
  usageFrequency  String?
  remarks         String?
  restarted       Boolean?
  cleaned         Boolean?
  replacedPart    String?
  troubleshooting String?
  tags            String?
  targetDate      DateTime?
  status          String       @default("PENDING")
  createdById     Int?
  createdBy       User?        @relation(fields: [createdById], references: [id])
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  attachments     Attachment[]
  comments        Comment[]
  parentId        Int?
  parent          Issue?       @relation("IssueGrouping", fields: [parentId], references: [id])
  children        Issue[]      @relation("IssueGrouping")
  customData      String?
  tasks           IssueTask[]
}

model IssueTask {
  id           Int      @id @default(autoincrement())
  title        String
  description  String?
  status       String   @default("TODO")
  result       String?
  issueId      Int
  issue        Issue    @relation(fields: [issueId], references: [id], onDelete: Cascade)
  assigneeName String?
  assigneeId   Int?
  assignee     User?    @relation("TaskAssignee", fields: [assigneeId], references: [id])
  createdById  Int
  createdBy    User     @relation("TaskCreator", fields: [createdById], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model FormField {
  id        Int      @id @default(autoincrement())
  label     String
  type      String
  options   String?
  required  Boolean  @default(false)
  order     Int      @default(0)
  isEnabled Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Attachment {
  id         Int      @id @default(autoincrement())
  filename   String
  path       String
  mimeType   String
  size       Int
  sha256     String?
  kind       String
  isInternal Boolean  @default(false)
  issueId    Int?
  issue      Issue?   @relation(fields: [issueId], references: [id])
  commentId  Int?
  comment    Comment? @relation(fields: [commentId], references: [id])
  createdAt  DateTime @default(now())

  @@index([sha256])
}

model Comment {
  id          Int          @id @default(autoincrement())
  type        String       @default("MESSAGE")
  content     String?
  isInternal  Boolean      @default(true)
  oldStatus   String?
  newStatus   String?
  author      String
  authorType  String       @default("USER")
  createdAt   DateTime     @default(now())
  issueId     Int
  issue       Issue        @relation(fields: [issueId], references: [id])
  attachments Attachment[]
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  issues    Issue[]
}

model SystemConfig {
  key   String @id
  value String
}
